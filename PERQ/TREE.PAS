program Tree(input, output);imports FileUtils from Fileutils;imports Screen from Screen;imports PERQ_String from PERQ_String;imports System from System;imports UtilProgress from UtilProgress;imports IO_Others from IO_Others;  { CurPatPtr, etc }imports IO_Unit from IO_Unit; { IOCPresent }imports IOErrors from IOErrors; { IOEIOC }const    Title = 'Greeble Bork v4ACGS.  Type /Help for Help';    CursorFilename = 'Tree.Cursor';var    debug: Boolean;    dumWindR: WinRange;    dumBool: Boolean;    winX, winY, winW, winH: Integer;(* Given a flag and a string, if the flag is set, upcase the string *)function bup(onOff: Boolean; textLabel: String): String;begin    if onOff then begin        ConvUpper(textLabel);        bup := textLabel;    end else begin        bup := textLabel;    end;end; { bup }    procedure Track;var    curX, curY: Integer;    quit: Boolean;    ch: Char;    st1, st2, st3: String;label    42;begin    quit := false;        repeat        if IOCRead(TransKey, ch) = IOEIOC then begin            Writeln('got a key!', ch);            goto 42;        end;        IOReadTablet(curX, curY);        st1 := bup(TabWhite, ' TabWhite');        st2 := bup(TabSwitch, ' TabSwitch');        st3 := bup(TabGreen, ' TabGreen');        Writeln(curX, curY, st2, st1, st3, TabMouse);    until quit;  42:    Writeln('quitting!');end; { Track }procedure GetCursor;var    fid: FileID;    blocks, bits: Integer;    patternPtr: CurPatPtr;begin    fid := FSLookUp(CursorFilename, blocks, bits);    if fid <> 0 then begin        New(0, 4, patternPtr); { default data segment, four-byte alignment }        FSBlkRead(fid, 0, RECAST(patternPtr, pDirBlk));        IOLoadCursor(patternPtr, 0, 0);  { origin top-left }        Dispose(patternPtr);    end;end;  { GetCursor }{ main program }begin    debug := false;    LoadBusy;    FSAddToTitleLine(title);    Write(chr(12)); { erase screen }    GetWindowParms(dumWindR, winX, winY, winW, winH, dumBool);    WriteLn(winX, winY, winW, winH, dumBool);    writeln('Lizard!');    QuitProgress;        GetCursor;        IOSetModeTablet(RelTablet);        IOCursorMode(TrackCursor);    Track;end.